<h1>Events</h1>

<div class="wrap">
  <div class="container">
    <div class="row events">

      <% @events.each do |event| %>
      <!-- // EVENT BLOCK -->
        <div class="col-xs-6 col-md-4 col-lg-3 event">
          <%= image_tag(event.image_url, class: "img-responsive") %>
          <h2>

            <p ><%= event.event_name %></p>
            <p><%= event.venue %> <%= event.location %></p>
            <p><%= event.date %></p>
          </h2>
          <h2>Church, Leeds<br>Saturday 03 March</h2>
          <ul>
            <li>Purple Disco Machine</li>
            <li>Simon Dunmore</li>
            <li>Melvo Baptiste</li>
          </ul>
          <div class="tickets"><a href="https://www.skiddle.com/whats-on/Leeds/Church/Glitterbox/13127498/" target="_blank"><button>Tickets</button></a></div>
        </div>
        <!-- EVENT BLOCK // -->
        <% end %>

    </div>

    <%= link_to 'New Event', new_event_path %>
  </div><!-- container // -->
</div><!-- wrap // -->


