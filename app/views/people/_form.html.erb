  <div class="field row">
    <div class="col-xs-2"><%= form.label :soundcloud %></div>
    <div class="col-xs-10"><%= form.text_field :soundcloud, id: :person_soundcloud %></div>
  </div>

  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-10">
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>

<% end %>
