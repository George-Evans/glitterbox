<%= form_with(model: radioshow, local: true) do |form| %>
  <% if radioshow.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(radioshow.errors.count, "error") %> prohibited this radioshow from being saved:</h2>

      <ul>
      <% radioshow.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-xs-3"><%= form.label :title %>*</div>
    <div class="col-xs-9"><%= form.text_field :title, id: :radioshow_title %></div>
  </div>

  <div class="field row">
    <div class="col-xs-3"><%= form.label :episode %>*</div>
    <div class="col-xs-9"><%= form.text_field :episode, id: :radioshow_episode %></div>
  </div>

  <div class="field row">
    <div class="col-xs-3"><%= form.label :description %>*</div>
    <div class="col-xs-9"><%= form.text_area :description, id: :radioshow_description %></div>
  </div>

  <div class="field row">
    <div class="col-xs-3"><%= form.label :image_url %>*</div>
    <div class="col-xs-9"><%= form.file_field :image_url, id: :radioshow_image_url %></div>
  </div>

  <div class="field row">
    <div class="col-xs-3"><%= form.label :listen_url %>*</div>
    <div class="col-xs-9"><%= form.text_field :listen_url, id: :radioshow_listen_url %></div>
  </div>

  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-9">
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
<% end %>
