<div class="container-fluid hero-img" style="background-image: url(<%= Home.first.background_image_url %>);">
	<%= image_tag(Home.first.overlay_image_url, class: "img-responsive video-overlay", style: "mix-blend-mode: " + Home.first.overlay_image_blend_mode + ";") %>
</div>

<div class="container blurb">
	<p><%= Home.first.text %></p>
	
	<% if user_signed_in? %>
		<button class="listen"><%= link_to 'Edit', edit_home_path(Home.first) %></button>
	<% end %>
</div>

